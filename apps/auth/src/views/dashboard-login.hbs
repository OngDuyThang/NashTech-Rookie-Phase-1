<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
    <title>Admin Login</title>

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #1E293B;
        }

        .container {
            position: relative;
            max-width: 430px;
            width: 100%;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            margin: 0 20px;
        }

        .container .forms {
            display: flex;
            align-items: center;
            width: 200%;
            transition: height 0.2s ease;
        }


        .container .form {
            width: 50%;
            padding: 30px;
            background-color: #fff;
            transition: margin-left 0.18s ease;
        }

        .container.active .login {
            margin-left: -50%;
            opacity: 0;
            transition: margin-left 0.18s ease, opacity 0.15s ease;
        }

        .container.active .forms {
            height: 600px;
        }

        .container .form .title {
            position: relative;
            font-size: 27px;
            font-weight: 600;
        }

        .form .title::before {
            content: '';
            position: absolute;
            left: 0;
            bottom: 0;
            height: 3px;
            width: 30px;
            background-color: #4070f4;
            border-radius: 25px;
        }

        .form .input-field {
            position: relative;
            height: 50px;
            width: 100%;
            margin-top: 30px;
        }

        .input-field input {
            position: absolute;
            height: 100%;
            width: 100%;
            padding: 0 35px;
            border: none;
            outline: none;
            font-size: 16px;
            border-bottom: 2px solid #ccc;
            border-top: 2px solid transparent;
            transition: all 0.2s ease;
        }

        .link-text {
            margin-top: 30px;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 16px;
        }

        .input-field input:is(:focus, :valid) {
            border-bottom-color: #4070f4;
        }

        .input-field i {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            color: #999;
            font-size: 23px;
            transition: all 0.2s ease;
        }

        .input-field input:is(:focus, :valid)~i {
            color: #4070f4;
        }

        .input-field i.icon {
            left: 0;
        }

        .input-field i.showHidePw {
            right: 0;
            cursor: pointer;
            padding: 10px;
        }

        .checkbox-content input {
            margin-right: 10px;
            accent-color: #4070f4;
        }

        .form .text {
            color: #333;
            font-size: 14px;
        }

        .form a.text {
            color: #4070f4;
            text-decoration: none;
        }

        .form a:hover {
            text-decoration: underline;
        }

        .form .button {
            margin-top: 35px;
        }

        .form .button input,
        .form .google input {
            border: none;
            color: #fff;
            font-size: 17px;
            font-weight: 500;
            letter-spacing: 1px;
            border-radius: 6px;
            background-color: #1E293B;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .button input:hover {
            background-color: #364968;
        }

        .login-with {
            width: 100%;
            margin-top: 30px;
            display: flex;
            justify-content: center;
            align-items: center;
            color: #333;
            font-size: 14;
            font-weight: 500;
            position: relative;
        }

        .login-with span {
            position: absolute;
            z-index: 10;
            background-color: #fff;
            padding: 0 8px;
        }

        .login-with div {
            position: absolute;
            top: 50%;
            width: 100%;
            border: 0.5px solid #ccc
        }

        .form .google input {
            background-color: #de5246;
        }

        .form .google {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .google input:hover {
            background-color: rgb(225, 85, 72);
        }

        .google input:is(:focus, :valid)~i {
            color: #fff;
        }

        .google .google-icon {
            color: #fff;
            cursor: pointer;
        }
    </style>
</head>

<body>

    <div class="container">
        <div class="forms">
            {{!-- Login --}}
            <div class="form login">
                <span class="title">Admin Login</span>

                <form action="/" method="POST" onsubmit="submitLogin()">
                    <div class="input-field">
                        <input name="usernameOrEmail" class="email" type="text" placeholder="Enter your username/email"
                            required>
                        <i class="uil uil-user icon"></i>
                    </div>
                    <div class="input-field">
                        <input name="password" class="password" type="password" class="password"
                            placeholder="Enter your password" required>
                        <i class="uil uil-lock icon"></i>
                        <i class="uil uil-eye-slash showHidePw"></i>
                    </div>

                    <div class="input-field button">
                        <input type="submit" value="Login">
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        const container = document.querySelector(".container")
        const pwShowHide = document.querySelectorAll(".showHidePw")
        const pwFields = document.querySelectorAll(".password")
        const loginGoogleBtn = document.getElementById("google")
        const loginGoogleIcon = document.querySelector(".google-icon")

        // show/hide password
        pwShowHide.forEach(eyeIcon => {
            eyeIcon.addEventListener("click", () => {
                pwFields.forEach(pwField => {
                    if (pwField.type === "password") {
                        pwField.type = "text";

                        pwShowHide.forEach(icon => {
                            icon.classList.replace("uil-eye-slash", "uil-eye");
                        })
                    } else {
                        pwField.type = "password";

                        pwShowHide.forEach(icon => {
                            icon.classList.replace("uil-eye", "uil-eye-slash");
                        })
                    }
                })
            })
        })

        function submitLogin() {
            event.preventDefault()
            const formData = new FormData(event.target);
            const body = Object.fromEntries(formData);

            fetch('/auth/dashboard-login', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(body)
            })
                .then(res => res.json())
                .then(data => {
                    if (data?.statusCode != 201) {
                        alert(data?.message)
                        return
                    }

                    // validateOtpEndpoint POST method
                    if (data.data.hasOwnProperty("validateOtpEndpoint")) {
                        const userId = data.data.userId
                        // auth/dashboard-2fa?userId=${userId} GET page method
                        window.location.href = `/auth/dashboard-2fa?userId=${userId}`
                        return
                    }

                    alert("Login successfully")
                    window.location.href = data?.data?.clientCallbackUrl
                })
                .catch(err => console.log(err))
        }
    </script>
</body>

</html>